<html>
<head>
    <script >

function toggle(pin) {
      httpPutAsync(pin, "/", function(responseText) {
            document.getElementById('pin'+pin).textContent = responseText;
      });
}

function httpPutAsync(pin, theUrl, callback) {
    var xmlHttp = new XMLHttpRequest();
    xmlHttp.onreadystatechange = function() {
        if (xmlHttp.readyState == 4 && xmlHttp.status == 200)
            callback(xmlHttp.responseText);
    }
    xmlHttp.open("PUT", theUrl, true); // true for asynchronous
    xmlHttp.send(pin);
    
}

    </script>
</head>
<body>
<h1>Sprinkler Controller</h1>
<h2>Common</h2>
<table border="1">
    <tr>
        <th>Pin</th>
        <th>State</th>
        <th></th>
    </tr>
    <tr>
        <td>{{common.pin}}</td>
        <td><span id="pin{{common.pin}}">{{common.state}}</span></td>
        <td><input type="button" value="Toggle" onclick="toggle({{common.pin}});"/></td>
    </tr>
</table>

<h2>Stations</h2>
<table border="1">
    <tr>
        <th>Station Id</th>
        <th>Description</th>
        <th>Pin</th>
        <th>State</th>
        <th></th>
    </tr>
    {{#stations}}
    <tr>
        <td>{{id}}</td>
        <td>{{description}}</td>
        <td>{{pin}}</td>
        <td><span id="pin{{pin}}">{{state}}</span></td>
        <td><input type="button" value="Toggle" onclick="toggle({{pin}});"/></td>
    </tr>
    {{/stations}}
</table>

<h2>Schedules</h2>
<table border="1">
    <tr>
        <th>Description</th>
        <th>Schedule</th>
        <th>Watering Times</th>
    </tr>
    {{#schedules}}
    <tr>
        <td>{{description}}</td>
        <td>{{startSchedule}}</td>
        <td>{{#durations}}Station {{stationId}} for {{minutes}} minutes.<br/> {{/durations}}   </td>
    </tr>
    {{/schedules}}
</table>


{{queue}}

</body>
</html>
